{
  "version": "0.0.8",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "lint": "yarn run lint:eslint && yarn run lint:flow && yarn run lint:flow:coverage",
